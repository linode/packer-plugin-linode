{
  "variables": {
    "linode_token": "{{env `LINODE_TOKEN`}}",
    "instance_image_label": "{{env `LINODE_IMAGE_LABEL`}}"
  },
  "builders": [{
    "type": "linode",
    "linode_token": "{{ user `linode_token` }}",
